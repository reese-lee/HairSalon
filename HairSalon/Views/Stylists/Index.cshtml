@using HairSalon.Models

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Big Dreams, Big Hair Salon</title>
  </head>
  <body>
    <h1>Big Dreams, Big Hair Salon</h1>
    <h2>Current Stylists</h2>
    <p>Click on a stylist to see their specialty and client list.</p>
    @if (Model.Count == 0)
    {
      <p>Please go back to add a stylist!</p>
    }
    @if (Model.Count != 0)
    {
      @foreach (Stylist stylist in Model)
      {
        <li>Stylist Name: <a href="/stylists/@stylist.Id">@stylist.Name</a></li>
      }
    }
  </body>
</html>
