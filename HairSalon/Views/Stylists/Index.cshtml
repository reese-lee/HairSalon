@using HairSalon.Models

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='~/css/styles.css' type="text/css">
    <title>Big Dreams, Big Hair Salon</title>
  </head>
  <body class="container">
    <!-- gathered info from New.cshtml and displays here -->
    <h1 class ="headline">Big Dreams, <br> Big Hair Salon</h1>
    <h2>Current Stylists</h2>
    <p>Click on a stylist to see their specialty and client list.</p>
    @if (Model.Count == 0)
    {
      <p>There are currently no stylists. Please go back to add a stylist!</p>
    }
    @if (Model.Count != 0)
    {
      @foreach (Stylist stylist in Model)
      {
        <p><button type="button" class="btn btn-light" id="stylistButtons"><a href="/stylists/@stylist.Id">@stylist.Name</a></button></p>
      }
    }
    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists">View stylists</a></button>
    <button type="button" class="btn btn-dark" id="buttons"><a href="/">Back to home</a></button>
  </body>
</html>
