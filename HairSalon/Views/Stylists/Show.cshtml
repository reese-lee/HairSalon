@using HairSalon.Models

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">

      <h1>Big Dreams, Big Hair Salon</h1>
      <em>See your selected stylist here:</em>

    <ol>
    @if (Model.Count == 0)
    {
      <p>Please go back to add a stylist.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var client in @Model["clients"])
      {
        <li><a href="/stylists/@Model["stylist"].Id/clients/@client.Id" class="btn btn-dark">@client.Name</a></li>
      }
    }
    </ol>
    <a href="/stylists/@Model["stylist"].Id/clients/new" class="btn btn-dark">Add a new client</a><br><br>
    <a href="/stylists" class="btn btn-dark">Return to stylist list</a>
    <a href="/" class="btn btn-dark">Return to homepage</a>
  </div>
</body>
</html>
