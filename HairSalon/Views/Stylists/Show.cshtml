@using HairSalon.Models;

<h1>Big Dreams, Big Hair Salon</h1>

<ol>
@if (Model.Count == 0)
{
  <p>Please go back to add a stylist!</p>
}
@if (Model.Count != 0)
{
  @foreach (Stylist stylist in @Model)
  {
    <li><strong>@stylist.Name</strong>
      <br>@stylist.specialty
    </li>
  }
}
</ol>

<a href="/stylists/@Model["stylists"].Id/clients/new">Add a new client</a>
<a href="/stylists">Return to stylists</a>
<a href="/">Return to home</a>
