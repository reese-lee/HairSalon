@using HairSalon.Models

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset='utf-8'>
    <title>Big Dreams, Big Hair Salon</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/css/styles.css' type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface&display=swap" rel="stylesheet">
  </head>
  <body>
    <h1 class="headline">Big Dreams, <br> Big Hair Salon</h1>
    <div class="container">
      <h2>View the specialties available at this salon:</h2>
        @if(Model.Count == 0)
        {
          <p>please go back to add a specialty</p>
        }
        @if(Model.Count != 0)
        {
          @foreach(Specialty specialty in Model)
          {
            <p><button type="button" class="btn btn-light"><a href="/specialties/@specialty.Id">@specialty.Type</a></button></p>
          }
        }

      <button type="button" class="btn btn-dark"><a href="/stylists/new">Add stylists or specialties</a></button>
      <button type="button" class="btn btn-dark"><a href="/">Back to homepage</a></button>
    </div>
  </body>
</html>
