@using HairSalon.Models

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/css/styles.css' type="text/css">
    <title>Big Dreams, Big Hair Salon</title>
  </head>
  <body>
    <h2>View all clients for @Model["stylist"].Name here:</h2>
    <h3>Client: @Model["client"].Name</h3>

    <ol>
    @if (Model.Count == 0)
    {
      <p>No clients have been added yet.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var client in @Model["client"])
      {
        <li><a href="/stylists/@Model["stylist"].Id/clients/@client.Id">@client.Name</a></li>
      }
    }
    </ol>


    <a href="/stylists/@Model["stylist"].Name">Back to Stylist: @Model["stylist"].Name</a>
    <a href="/stylists">Back to all stylists</a>

  </body>
</html>
