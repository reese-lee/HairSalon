@using HairSalon.Models

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/css/styles.css' type="text/css">
    <title>Big Dreams, Big Hair Salon</title>
  </head>
  <body class="container">
    <h1 class="headline">Big Dreams, <br> Big Hair Salon</h1>
    <h2>View all clients for @Model["stylist"].Name here:</h2>

        @if (Model.Count == 0)
        {
          <p>No clients have been added yet.</p>
        }
        @if(Model.Count != 0)
        {
          @foreach (var client in @Model["clients"])
          {
            <li><a href="/stylists/@Model["stylist"].Id/clients/@client.Id">@client.Name</a></li>
          }
        }

    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists/@Model["stylist"].Name">Back to Stylist: @Model["stylist"].Name</a></button>
    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists">Back to all stylists</a></button>

  </body>
</html>
