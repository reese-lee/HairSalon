@using HairSalon.Models

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Big Dreams, Big Hair Salon</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/css/styles.css' type="text/css">
  </head>
  <body>
    <div class="container">
    <h1 class="headline">Big Dreams, <br> Big Hair Salon</h1>
    <h3>Add a new client for <strong>@Model["stylist"].Name</strong></h3>
    <p>Just added: @Model["clients"].ClientName</p>
    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists/@Model["stylist"].Id">Back to @Model["stylist"].Name</a></button>
    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists/@Model["stylist"].Id/clients/new">Add another client</a></button>
    <button type="button" class="btn btn-dark" id="buttons"><a href="/stylists">All stylists</a></button>
    </div>
  </body>
</html>
